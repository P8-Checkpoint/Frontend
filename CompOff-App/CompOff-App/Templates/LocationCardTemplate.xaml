<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate
    x:Class="CompOff_App.Templates.LocationCardTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="[components ]clr-namespace:CompOff_App.Components"
    xmlns:converters="clr-namespace:CompOff_App.Converters"
    xmlns:models="clr-namespace:CompOff_App.Models"
    xmlns:viewmodels="clr-namespace:CompOff_App.Viewmodels.Tabs"
    x:DataType="models:Location">
    <Border
        Margin="5,0"
        Padding="20,15,20,5"
        BackgroundColor="{StaticResource Light}"
        Stroke="{StaticResource Light}"
        StrokeShape="RoundRectangle 8"
        StrokeThickness="1"
        WidthRequest="180">
        <Grid ColumnDefinitions="*" RowDefinitions="*,auto">
            <Image Grid.Row="0" Source="Resources/Images/Sample.svg" />
            <Label
                Grid.Row="1"
                Margin="0,5,0,0"
                FontAttributes="Bold"
                FontSize="22"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                LineBreakMode="WordWrap"
                Text="{Binding Name}"
                TextColor="{StaticResource Primary}" />

        </Grid>

    </Border>
</DataTemplate>
